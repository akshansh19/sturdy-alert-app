<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/modify"
    tools:context="com.example.hp.alert.Modify">

    <RelativeLayout
        android:id="@+id/Header_sendMsg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/header">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:text="@string/Modify"
            android:textColor="@color/white"
            android:textSize="27sp"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <ListView
        android:id="@+id/contact_list"
        android:layout_width="300dp"
        android:layout_height="33dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textViewHead"
        android:layout_centerHorizontal="true"
        android:background="@drawable/clickeffect"
        android:backgroundTint="@color/all_screens" />

    <TextView
        android:id="@+id/textViewHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/contact_list"
        android:layout_below="@+id/Header_sendMsg"
        android:padding="5dp"
        android:text="@string/textHEad"
        android:textColor="@color/black"
        android:textSize="25sp" />
</RelativeLayout>
